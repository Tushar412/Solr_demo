<h1>Editing property</h1>

<% form_for(@property) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :area %><br />
    <%= f.text_field :area %>
  </p>
  <p>
    <%= f.label :no_of_bathrooms %><br />
    <%= f.text_field :no_of_bathrooms %>
  </p>
  <p>
    <%= f.label :no_of_bedrooms %><br />
    <%= f.text_field :no_of_bedrooms %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

